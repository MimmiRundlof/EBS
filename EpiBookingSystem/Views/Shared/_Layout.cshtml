@{ var userName = System.Web.HttpContext.Current.User.Identity.Name; }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap-datetimepicker.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="/scripts/moment.min.js"></script>
    <script src="~/Static/js/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Static/css/bootstrap-collapse.js"></script>
    <script type="text/javascript" src="/scripts/bootstrap-datetimepicker.js"></script>
    <script src="~/Static/js/JavaScript.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Capio Ögon", "Index", "StandardPage", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
                <div style="float:right; color:white;">
                    @if (!User.IsInRole("WebAdmins") && User.Identity.IsAuthenticated)
                    {
                        <h4>Hej @userName!</h4>
                        @Html.ActionLink("Logga ut", "LogOut", "Account")
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()

        <footer></footer>
    </div>




</body>
</html>