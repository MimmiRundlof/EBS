@using EpiBookingSystem
@using EPiServer.Core
@using EPiServer.Web.Mvc.Html
@model RegisterViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="authenticate-container">
    <div class="pure-u">
        <h2 class="brand-tagline">@Html.Translate("/register")</h2>
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "pure-form align-center" }))
        {

            <fieldset class="pure-group">
                @Html.TextBoxFor(m => m.Username, new { placeholder = @Html.Translate("/authentication/username"), @class = "pure-input-1-1" })
                @Html.TextBoxFor(m => m.Email, new { placeholder = @Html.Translate("/authentication/email"), @class = "pure-input-1-1" })
                @Html.PasswordFor(m => m.Password, new { placeholder = @Html.Translate("/authentication/password"), @class = "pure-input-1-1" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = @Html.Translate("/authentication/confirmpassword"), @class = "pure-input-1-1" })

                @Html.ValidationSummary(false, "", new { @class = "pure-form-message-inline" })
                <div class="pure-control-group">

                </div>
                <div class="pure-control-group">
                    <input type="submit" class="pure-button pure-button-primary authenticate-button" value="@Html.Translate("/register")" />
                </div>

            </fieldset>

        }



    </div>
    </div>