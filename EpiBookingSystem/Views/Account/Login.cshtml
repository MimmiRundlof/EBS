@using EpiBookingSystem
@using EPiServer.Core
@using EPiServer.Web.Mvc.Html
@model LoginViewModel

@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="authenticate-container">
    <div class="pure-u">
        <h1 class="text-box-head">@Html.Translate("/login")</h1>

        @using (Html.BeginForm("LogIn", "Account", FormMethod.Post, new { @class = "pure-form align-center" }))
        {
            @Html.AntiForgeryToken()
            <fieldset class="pure-group">
                @Html.TextBoxFor(m => m.Username, new { placeholder = @Html.Translate("/authentication/username"), @class = "pure-input-1-1" })
                @Html.PasswordFor(m => m.Password, new { placeholder = @Html.Translate("/authentication/password"), @class = "pure-input-1-1" })
                @Html.ValidationMessage("LogInError", new { @class = "pure-form-message-inline" })

                <div class="pure-control-group">

                </div>
                <div class="pure-control-group">
                    <input type="submit" class="pure-button pure-button-primary authenticate-button" value="@Html.Translate("/login")" />
                </div>
            </fieldset>
        }
    </div>
</div>